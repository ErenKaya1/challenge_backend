@model Challenge.Application.Business.Users.Queries.VerifyPhoneNumberAdminQuery

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Doğrulama | Challenge Backoffice</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet"
        type="text/css">
    <link href="/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">

    <link href="/lib/bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/lib/bootstrap/bootstrap-limitless.min.css" rel="stylesheet" type="text/css">
    <link href="/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="/css/colors.min.css" rel="stylesheet" type="text/css">
    
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/js/uniform.min.js"></script>
</head>

<body class="bg-slate-800" style="background-image: url(/admin/theme/img/login-bgcover.jpg);  background-size: cover">
    <div class="page-content">
        <div class="content-wrapper">
            <div class="content d-flex justify-content-center align-items-center">

                <form asp-controller="Login" asp-action="VerifyPhoneNumber" class="login-form" method="POST"
                    asp-antiforgery="true">
                    <div class="card mb-0" style="border-radius: 10px;">
                        <div class="card-body">
                            <div class="text-center mb-3">

                                <img src="/admin/theme/img/blinck_logo.svg" alt="logo"
                                    style="margin-bottom: 12px; margin-left: -12px" />
                                <h5 class="mb-0">İki Aşamalı Doğrulama</h5>
                                <span class="d-block text-muted">
                                    Cep telefonunuza SMS ile gönderilen kodu girin. (0000)
                                </span>
                            </div>

                            @await Component.InvokeAsync("Alert")

                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input asp-for="Email" type="hidden">
                                <input asp-for="Code" class=" form-control" placeholder="Code" type="password">
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>
                                <span asp-validation-for="Code" class="text-danger" style="border-radius: 10px;"></span>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="form-check mb-0">
                                    <label class="form-check-label">
                                        <input asp-for="IsPersistent" class="form-input-styled" data-fouc>
                                        Beni Hatırla
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-block text-white"
                                    style="background-color: #6B1F8C; border-radius: 10px;">Doğrula <i
                                        class="icon-circle-right2 ml-2"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $('.form-input-styled').uniform();
    </script>
</body>

</html>